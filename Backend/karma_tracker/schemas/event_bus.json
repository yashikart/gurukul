{
  "eventBusSchema": {
    "channels": {
      "karma.feedback": {
        "description": "Karmic feedback and influence signals",
        "messageFormat": {
          "message_id": "string (UUID)",
          "channel": "karma.feedback",
          "payload": {
            "signal_id": "string (UUID)",
            "user_id": "string",
            "type": "string (karmic_influence)",
            "data": {
              "user_id": "string",
              "overall_influence": {
                "user_id": "string",
                "reward_score": "number",
                "penalty_score": "number",
                "behavioral_bias": "number",
                "dynamic_influence": "number",
                "net_karma": "number",
                "timestamp": "ISO8601 datetime"
              },
              "module_influence": {
                "moduleName": {
                  "event_count": "number",
                  "total_influence": "number",
                  "last_event_timestamp": "ISO8601 datetime"
                }
              },
              "aggregation_timestamp": "ISO8601 datetime"
            },
            "timestamp": "ISO8601 datetime"
          },
          "timestamp": "ISO8601 datetime",
          "metadata": {
            "source": "string",
            "user_id": "string",
            "signal_id": "string (UUID)"
          }
        }
      },
      "karma.lifecycle": {
        "description": "User lifecycle events (birth, death, role changes, etc.)",
        "messageFormat": {
          "message_id": "string (UUID)",
          "channel": "karma.lifecycle",
          "payload": {
            "event_type": "string (user_birth|user_death|role_change|level_up)",
            "user_id": "string",
            "data": "object (event-specific data)",
            "timestamp": "ISO8601 datetime"
          },
          "timestamp": "ISO8601 datetime",
          "metadata": {
            "source": "string",
            "correlation_id": "string (UUID)"
          }
        }
      },
      "karma.analytics": {
        "description": "Analytics and reporting events",
        "messageFormat": {
          "message_id": "string (UUID)",
          "channel": "karma.analytics",
          "payload": {
            "report_type": "string (daily_summary|weekly_report|monthly_analysis)",
            "data": "object (report-specific data)",
            "generated_at": "ISO8601 datetime"
          },
          "timestamp": "ISO8601 datetime",
          "metadata": {
            "source": "string",
            "report_id": "string (UUID)"
          }
        }
      }
    },
    "commonFields": {
      "message_id": "Unique identifier for the message",
      "channel": "The channel this message was published to",
      "payload": "The main content of the message",
      "timestamp": "When the message was published (UTC)",
      "metadata": "Additional information about the message"
    }
  }
}